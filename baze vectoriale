<div id="result"></div>

<script>
function checkAnswers() {
    const correctAnswers = {
        q1: 'a', q2: 'a', q3: 'b', q4: 'a', q5: 'c',
        q6: 'a', q7: 'a', q8: 'a', q9: 'a', q10: 'a'
    };

    let score = 0;

    for (const [key, value] of Object.entries(correctAnswers)) {
        const userAnswer = document.querySelector(`input[name="${key}"]:checked`);

        // resetare culori
        document.querySelectorAll(`input[name="${key}"]`).forEach(input => {
            input.parentElement.style.color = "black";
        });

        if (userAnswer) {
            if (userAnswer.value === value) {
                score++;
                userAnswer.parentElement.style.color = "green";
            } else {
                userAnswer.parentElement.style.color = "red";
                const correctInput = document.querySelector(`input[name="${key}"][value="${value}"]`);
                correctInput.parentElement.style.color = "green";
            }
        }
    }

    document.getElementById('result').textContent =
        `Ai răspuns corect la ${score} din 10 întrebări.`;
}
</script>

